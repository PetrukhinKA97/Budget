<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Budget.Views.VExpenses_add">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Название"/>
            <Entry x:Name="Name_expenses"/>
            <Label Text="Тип трат"/>
            <Picker x:Name="Type_expenses"/>
            <Button Text="Добавить" x:Name="Type_expenses_add"/>
            <Label Text="Кретичность"/>
            <Picker x:Name="Importance" />
            <Button Text="Добавить" x:Name="Type_importance_add"/>
            <Label Text="Дата"/>
            <Entry x:Name="Date"/>
            <Label Text="Сумма"/>
            <Entry x:Name="Amount"/>
            <Label Text="Количество"/>
            <Entry x:Name="Number"/>
            <Label Text="Обьем"/>
            <Entry x:Name="Volume"/>
            <Button Text="Добавить траты" x:Name="Importance_add" Clicked="Importance_add_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>